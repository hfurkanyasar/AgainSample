
@model List<Rapor>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.js"></script>


<style>
   
    .table-sm td, .table-sm th {
        padding: 0.5rem;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f5f5f5;
    }
</style>

<div class="container">
    <h2 class="text-center">Genel Raporlama</h2>
    <div class="row">
        <div class="table-responsive">
            <table id="raporTablosu" class="table table-striped table-sm">
                <thead class="thead-light">
                    <tr>
                        <th data-orderable="true">Kategori Adi</th>
                        <th data-orderable="true">Urun Adi</th>
                        <th data-orderable="true">Urun Fiyati</th>
                        <th data-orderable="true">Urun Stok Adeti</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.KategoriAdi</td>
                            <td>@item.UrunAdi</td>
                            <td>@item.UrunFİyati</td>
                            <td>@item.UrunStokAdeti</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

