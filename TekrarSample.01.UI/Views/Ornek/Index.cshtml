@model List<Kategori>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="text-center">Kategoriler</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            @*@Html.ActionLink("Kategori Ekle", "ekleKat", null, htmlAttributes: new { @class = "btn btn-primary" })*@
            <a asp-controller="Ornek" asp-action="ekleKat" >KategoriEkle</a>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">Kategori Adı</th>
                        <th class="text-center">Kategori ID</th>
                        <th class="text-center" colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.KategoriAdi</td>
                            <td>@item.KategoriID</td>
                            <td class="text-center">
                                @Html.ActionLink("Güncelle", "guncelleKat", new { id = item.KategoriID }, new { @class = "btn btn-primary btn-sm" })
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Sil", "silKat", new { id = item.KategoriID }, new { @class = "btn btn-danger btn-sm" })
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

